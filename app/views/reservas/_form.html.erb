<%= form_with(model: reserva) do |form| %>
  <% if reserva.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reserva.errors.count, "error") %> prohibited this reserva from being saved:</h2>

      <ul>
        <% reserva.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cliente_id %>
    <%= form.collection_select(:cliente_id, Cliente.all, :id, :nome,{:selected => @reserva.cliente_id})%>
  </div>

  <div>
    <%= form.label :quarto_id %>
    <%= form.collection_select(:quarto_id, Quarto.disponibilidade, :id, :numero, selected: @reserva.quarto_id) %>
  </div>

  <div>
    <%= form.label :data_de_entrada, style: "display: block" %>
    <%= form.date_field :data_de_entrada %>
  </div>

  <div>
    <%= form.label :data_de_saida, style: "display: block" %>
    <%= form.date_field :data_de_saida %>
  </div>

  <div>
    <%= form.label :custo, style: "display: block" %>
    <%= form.text_field :custo %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
